<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:text="Hello World!" />

        <custom.android.view.GaugeView
            android:id="@+id/gaugeView"
            android:layout_width="100dp"
            android:layout_height="170dp"
            android:layout_marginStart="196dp"
            android:layout_marginTop="30dp"
            gauge:divisions="10"
            gauge:rangeValues="@array/speedTestRangeValues"
            gauge:scaleEndValue="1500"
            gauge:showGaugeRanges="true"
            gauge:showInnerRim="false"
            gauge:showNeedle="true"
            gauge:showOuterBorder="false"
            gauge:showOuterRim="true"
            gauge:showOuterShadow="false"
            gauge:showRangeText="true"
            gauge:showRanges="true"
            gauge:showScale="true"
            gauge:subdivisions="1"
            gauge:textUnit="KM/s"
            gauge:textUnitSize="0.06"
            gauge:textValueSize="0.15" />

        <custom.android.view.GaugeView
            android:id="@+id/gv2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            gauge:divisions="7"
            gauge:rangeValues="@array/speedTestRangeValues"
            gauge:scaleEndValue="1500"
            gauge:showGaugeRanges="true"
            gauge:showInnerRim="false"
            gauge:showNeedle="true"
            gauge:showOuterBorder="false"
            gauge:showOuterRim="true"
            gauge:showOuterShadow="false"
            gauge:showRangeText="true"
            gauge:showRanges="true"
            gauge:showScale="true"
            gauge:subdivisions="1"
            gauge:textUnit="%"
            gauge:textUnitSize="0.06"
            gauge:textValueSize="0.15" />

        <custom.android.view.GaugeView
            android:id="@+id/gv3"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="212dp"
            gauge:divisions="4"
            gauge:rangeValues="@array/speedTestRangeValues"
            gauge:scaleEndValue="1500"
            gauge:showGaugeRanges="true"
            gauge:showInnerRim="false"
            gauge:showNeedle="true"
            gauge:showOuterBorder="false"
            gauge:showOuterRim="true"
            gauge:showOuterShadow="false"
            gauge:showRangeText="true"
            gauge:showRanges="true"
            gauge:showScale="true"
            gauge:subdivisions="1"
            gauge:textUnit="Pa"
            gauge:textUnitSize="0.06"
            gauge:textValueSize="0.15" />

        <custom.android.view.GaugeView
            android:id="@+id/gv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="212dp"
            gauge:divisions="4"
            gauge:rangeValues="@array/speedTestRangeValues"
            gauge:scaleEndValue="1500"
            gauge:showGaugeRanges="true"
            gauge:showInnerRim="false"
            gauge:showNeedle="true"
            gauge:showOuterBorder="false"
            gauge:showOuterRim="true"
            gauge:showOuterShadow="false"
            gauge:showRangeText="true"
            gauge:showRanges="true"
            gauge:showScale="true"
            gauge:subdivisions="1"
            gauge:textUnit="Pa"
            gauge:textUnitSize="0.06"
            gauge:textValueSize="0.15" />

        <custom.android.view.TempGauge
            android:id="@+id/tg1"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="452dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:nametext="냉각수"
            app:valuetext="20" />

        <custom.android.view.TempGauge
            android:id="@+id/tg2"
            android:layout_width="68dp"
            android:layout_height="63dp"
            android:layout_marginStart="184dp"
            android:layout_marginTop="452dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:nametext="오일 온도"
            app:valuetext="20"
            app:unittext="도">
        </custom.android.view.TempGauge>

        <custom.android.view.TempGauge
            android:id="@+id/tg3"
            android:layout_width="68dp"
            android:layout_height="63dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="535dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:nametext="오일 온도"
            app:valuetext="20"
            app:unittext="도">
        </custom.android.view.TempGauge>

        <SeekBar
            android:id="@+id/seekBar22"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="520dp"
            android:maxHeight="2dp"
            android:progress="50"
            android:progressDrawable="@color/main"
            android:thumb="@drawable/thumb_seekbar"
            android:splitTrack="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="180dp"
            android:layout_weight="1"
            android:text="TextView" />

    </FrameLayout>




</LinearLayout>